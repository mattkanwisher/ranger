#!/bin/sh

DAEMON=/usr/local/bin/errplane-local-agent
PARAMS="--foreground"
LOGFILE=/var/log/errplane/daemon.log

start() {
    echo -n "starting up $DAEMON"
    mkdir -p /var/log/errplane;true
    RUN=`cd / && nohup $DAEMON $PARAMS > $LOGFILE 2>&1 &`

    if [ "$?" -eq 0 ]; then
        echo "\nDone."
    else
        echo "\nFAILED."
    fi
}

stop() {
    pkill -9 -f errplane-local-agent
}

status() {
    pgrep -f errplane-local-agent

    if [ "$?" -eq 0 ]; then
        echo "Running."
    else
        echo "Not Running."
    fi
}

case "$1" in
    start)
    start
    ;;

    restart)
    stop
    sleep 2
    start
    ;;

    stop)
    stop
    ;;

    status)
    status
    ;;

    *)
    echo "usage : $0 start|restart|stop|status"
    ;;
esac

exit 0